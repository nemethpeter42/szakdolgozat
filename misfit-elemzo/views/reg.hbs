<form class='form-horizontal' id='form1' name='form1' method='post'>
	<fieldset>
		<p>
			<input type='text' name='email' id='email' placeholder='e-mail' onkeydown='if (event.keyCode == 13) return false' />
		</p>
		<p>
			<input type='checkbox' id='typeMisfit' checked style='display:none'  />
			<input type='checkbox' id='typeMisfit_is_now_dummy' checked disabled />
			Misfit
		</p>
		<p>
			<input type='password' id='passwordMisfit' placeholder='MisFit jelszó' onkeydown='if (event.keyCode == 13) return false' />
		</p>
		<p>
			<input type='text' name='password' id='password' style='display:none' />
			<input type='text' name='type' id='type_' style='display:none' />
			<input type='submit' name='submit' id='submit' style='display:none' />
			<input class='btn btn-primary' onclick='mySubmit()' value='Regisztráció' />
		</p>
	</fieldset>
</form>        
