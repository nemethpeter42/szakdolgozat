<script>
   $(() => {
		$('#typeMisfit').click(() => {
			$('#passwordMisfit').toggle(this.checked)
		})
	})
	window.onload = () => {
		$('#typeMisfit').prop('checked',true)
	}
	
	var mySubmit = () => {
		$('#password').val(
			JSON.stringify({
				misfit: $('#passwordMisfit').val()!=='' ? $('#passwordMisfit').val() : undefined,
			})
		)
		var type = []
		if ( $('#typeMisfit').is(':checked') ){
			type.push('misfit')
		}
		$('#type_').val(JSON.stringify(type))
		$('#submit').click()
	}
</script>

